  body

    div#topbar
      ul
        each item, i in menu
          li.item.btn
            | #{item.name}
      button#peek.btn fan again

    div#my-card-view
      each page, i in pages
        - var classes = ""

        div(class=classes)
          div.in
            div.overlay
              h1 #{page.name}

    div#bottombar
      span Use fast device + modern browser
      &nbsp;|&nbsp;
