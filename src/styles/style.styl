@import 'nib'

$topbarHeight = 48px
$bottombarHeight = 36px

* {
  box-sizing: border-box;
}
html, body {
  font-family sans-serif
  background #111
  margin 0
  padding 0
  overflow-x hidden
}

html
  overflow-y scroll

body
  //margin-left 200px
  padding-top $topbarHeight
  font-size 14px

#bottombar

  position fixed
  bottom 0
  left 0
  z-index 100
  height $bottombarHeight
  width 100%
  background #444
  color white
  font-size 10px
  line-height $bottombarHeight
  text-align center

  a
    color yellow
    font-weight bold


#topbar

  position fixed
  top 0
  left 0
  z-index 100
  height $topbarHeight
  width 100%
  background #444

  *
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0) !important;
    -webkit-focus-ring-color:  rgba(0, 0, 0, 0) !important;
    outline: none;
    user-select: none

  .label
    float left
    color white
    font-size 
    height 36px
    line-height 36px
    margin 4px
    font-size 12px

  button#peek
    visibility hidden

  .btn, ul li.btn
    appearance none
    display block
    float left
    border: 0;
    min-width 2em
    line-height 36px;
    height 36px;
    margin 4px 2px 0
    padding 0 2px
    border-radius: 4px;
    border 1px solid #333
    box-shadow 0px 1px 1px rgba(0,0,0,0.5)
    background: linear-gradient(top, #ccc, #666);
    text-align center
    font-weight: bold;
    color white
    text-shadow 0px 1px 1px rgba(0,0,0,0.5)

    &:hover
      background #666

  ul
    padding 0
    margin 0
    li
      margin 0
      padding 0

#my-card-view
  // FOUC
  display none
  //margin-top $topbarHeight

  &.card-view-not-fullscreen
    position  absolute
    height 300px
    width 600px
    left 150px
    top 60px

.card
  font-size 2em
  padding 20px
  border 2px solid black
  box-shadow -4px -4px 16px rgba(0,0,0,0.75)
  //border-top: 1px solid white
  //border-bottom: 1px solid white
  background: white
